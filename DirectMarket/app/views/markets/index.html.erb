<h1>Participating Markets</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Street</th>
      <th>City</th>
      <th>State</th>
      <th>Day</th>
      <th>Starttime</th>
      <th>Endtime</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @markets.each do |market| %>
      <tr>
        <td><%= market.name %></td>
        <td><%= market.street %></td>
        <td><%= market.city %></td>
        <td><%= market.state %></td>
        <td><%= market.day %></td>
        <td><%= market.starttime.hour %></td>
        <td><%= market.endtime.hour %></td>
        <td><%= link_to 'Orders', market_orders_path(market) %></td>
        <td><%= link_to 'Show', market %></td>
        <td><%= link_to 'Edit', edit_market_path(market) %></td>
        <td><%= link_to 'Destroy', market, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

